<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="label_main_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/big_text_size</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="place_text_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_marginEnd">@dimen/min_margin</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
        <item name="android:layout_marginBottom">1dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/place_text_size</item>
    </style>

    <style name="trainer_name_text_style">
        <item name="android:layout_width">@dimen/width_name_trainer</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/name_trainer_text_size</item>
        <item name="android:layout_marginTop">@dimen/min_margin</item>
    </style>

    <style name="name_lesson_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/normal_margin</item>
        <item name="android:layout_marginTop">13dp</item>
        <item name="android:paddingEnd">@dimen/normal_margin</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="end_time_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/min_margin</item>
        <item name="android:layout_marginBottom">@dimen/normal_margin</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/label_text_size</item>
    </style>

    <style name="start_time_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/start_lesson_time_margin</item>
        <item name="android:layout_marginTop">@dimen/normal_margin</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/label_text_size</item>
    </style>

    <style name="color_lesson_view_style">
        <item name="android:layout_width">8dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:background">@drawable/color_indicator_style</item>
        <item name="android:translationZ">1dp</item>
    </style>
</resources>